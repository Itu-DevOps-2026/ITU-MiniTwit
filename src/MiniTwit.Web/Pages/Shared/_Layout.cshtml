@using MiniTwit.Infrastructure.Entities
@inject UserManager<Author> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
    <!-- Nav bar taken from session 8 README_PROJECT -->
    <div class=navigation>
        @if (User.Identity!.IsAuthenticated)
        {
            <div>
                @{
                    var currentUser = await UserManager.GetUserAsync(User);
                    var displayName = currentUser?.Name ?? User.Identity.Name;
                }
                <a href="/">Public timeline</a> |
                <a href="/@displayName">My timeline</a> |
                <a href="/AboutMe">About me</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/logout"> Logout [@displayName]</a>
            </div>
        }
        else
        {
            <div>
                <a href="/">Public timeline</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        }
    </div>
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
