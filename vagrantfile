# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.synced_folder ".", "/vagrant", type: "rsync"

  config.vm.define "droplet1", primary: true do |server|
    server.vm.provider :digital_ocean do |provider, override|
      override.vm.box = 'digital_ocean'
      override.vm.box_url = "https://github.com/devopsgroup-io/vagrant-digitalocean/raw/master/box/digital_ocean.box"
      override.ssh.private_key_path = '~/.ssh/id_ed25519' #CHANGE THIS to where your ssh key is located
      provider.ssh_key_name = 'MiniTwit' #CHANGE THIS to the name of the key in Digital Ocean
      provider.token = ENV["DIGITAL_OCEAN_TOKEN"]
      provider.image = 'ubuntu-22-04-x64' # could be a custom image created in Digital Ocean
      provider.region = 'fra1'
      provider.size = 's-1vcpu-1gb'
      provider.privatenetworking = true
    end
    
    server.vm.hostname = "droplet1"    
    
    server.vm.provision "shell", inline: <<-SHELL
      # The following addresses an issue in DO's Ubuntu images, which still contain a lock file
      sudo fuser -vk -TERM /var/lib/apt/lists/lock
      sudo apt-get update
      sudo apt-get install -y wget apt-transport-https
      
      #Fix for .NET fail
      echo "Adding Microsoft package repository..."
      wget https://packages.microsoft.com/config/ubuntu/22.04/packages-microsoft-prod.deb -O packages-microsoft-prod.deb
      sudo dpkg -i packages-microsoft-prod.deb
      rm packages-microsoft-prod.deb
      
      # See installation instructions: https://learn.microsoft.com/en-us/dotnet/core/install/linux-ubuntu-install?tabs=dotnet10&pivots=os-linux-ubuntu-2404
      echo "Installing .NET"
      
      sudo apt-get update
      sudo apt-get install -y dotnet-sdk-8.0
      
      cp -r /vagrant/* $HOME
      nohup dotnet MiniTwit.Web > out.log &
      echo "================================================================="
      echo "=                            DONE                               ="
      echo "================================================================="
      echo "Navigate in your browser to:"
      THIS_IP=$(curl -s ifconfig.me)
      echo "http://${THIS_IP}:5000"
    SHELL
  end
end

# if this does not work because it can't run dotnet MinitTwit.Web because it needs MiniTwit.Web.dll because it can't compile it
# if this is the case then run dotnet publish locally and make sure it is placed in the root with the vagrantfile then change cp command to 'cp -r /vagrant/publish/* $HOME' the dotnet command to run the .dll file